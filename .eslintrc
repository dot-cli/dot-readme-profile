{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "oclif",
  "root": true,
  "rules": {
    "node/no-missing-import": 1,
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "padding-line-between-statements": "off",
    "arrow-parens": ["error", "always"],
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "ignores": ["modules"] }
    ]
  }
}
